<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:enforceNavigationBarContrast" tools:targetApi="29">true</item>
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:statusBarColor">#ffffff</item>
  </style>
  <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/splashscreen_background</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
    <item name="android:windowSplashScreenBehavior">icon_preferred</item>
  </style>
  <!-- 
    Theme for InterventionActivity
    
    Design Goals:
    - No splash screen or loading UI
    - Minimal visual disruption
    - Full-screen immersive experience
    - No action bar or title bar
    - React Native content shows immediately when ready
    
    This theme ensures users see ONLY the intervention UI,
    not any app chrome or branding elements.
  -->
  <style name="Theme.Intervention" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- No action bar -->
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    
    <!-- Transparent window background (React Native will provide content) -->
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
    
    <!-- Full-screen experience -->
    <item name="android:windowFullscreen">false</item>
    <item name="android:fitsSystemWindows">false</item>
    
    <!-- Status bar styling -->
    <item name="android:statusBarColor" tools:targetApi="21">#000000</item>
    <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    
    <!-- No splash, no animation delays -->
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowDisablePreview">true</item>
    
    <!-- Standard edit text styling -->
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    
    <!-- Navigation bar (keep consistent with AppTheme) -->
    <item name="android:enforceNavigationBarContrast" tools:targetApi="29">true</item>
  </style>
</resources>